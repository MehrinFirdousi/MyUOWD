<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgcolor"
    tools:context=".UserProfileFragment"
    android:layout_marginTop="@dimen/toolbarHeight"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/navyuow_100"
        android:paddingVertical="25dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_24"
            android:background="@drawable/usericon_background"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"/>

        <TextView
            android:id="@+id/studentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            style="@style/UserProfileTextStyle"/>

        <TextView
            android:id="@+id/studentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            style="@style/UserProfileTextStyle"/>

        <TextView
            android:id="@+id/courseLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            style="@style/UserProfileTextStyle"/>

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            style="@style/UserProfileTextStyle"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/studentBarcode"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        app:tint="@color/navyuow_100" />
</LinearLayout>