            android:layout_height="@dimen/buttonHeight"
            android:layout_marginVertical="12dp"
            android:backgroundTint="@color/white"
            android:tag="@string/busRoutesTag"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_busroutes"
