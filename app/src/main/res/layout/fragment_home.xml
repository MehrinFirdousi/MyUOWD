            app:cornerRadius="18dp"
            app:icon="@drawable/ic_moodle"
            app:iconSize="@dimen/buttonIconSize"
            app:iconTint="@color/red2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/emailButton"
            app:layout_constraintTop_toBottomOf="@id/studentSystems" />

        <TextView
            android:id="@+id/solsLabel"
