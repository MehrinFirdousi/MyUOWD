            android:layout_height="@dimen/buttonHeight"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:tag="@string/emailTag"
            app:cornerRadius="18dp"
            app:icon="@drawable/ic_email"
            app:iconSize="@dimen/buttonIconSize"
            app:iconTint="@color/red2"
            app:layout_constraintEnd_toStartOf="@+id/moodleButton"
            app:layout_constraintStart_toEndOf="@+id/solsButton"
            app:layout_constraintTop_toBottomOf="@id/studentSystems" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moodleButton"
            android:layout_width="@dimen/buttonWidth"
            android:layout_height="@dimen/buttonHeight"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
